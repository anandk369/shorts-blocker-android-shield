
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/blocker_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#8B5CF6"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <ImageView
                android:id="@+id/blocker_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_shield"
                android:tint="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/blocker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube Shorts Blocked"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blocker_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe away or exit Shorts to continue"
                android:textColor="#FFFFFF"
                android:alpha="0.8"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
